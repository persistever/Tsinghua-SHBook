<!--pages/index/to_news/to_news.wxml-->
<!--上半部分加入书籍图片和信息以及接口的view-->

<view class='tab' bindtap="ToBook">
  <view class='flex'>
  <view>
    <image class='book_img' src='{{itemCoverPath}}' mode="aspectFit"></image>
  </view>
  <view class = 'right'>
    <view><text class='book_info'>资料名：{{itemName}}</text></view>
    <view><text class='book_info'>价格：{{itemPrice}}</text></view>
    <view><text class='book_info'>简介：{{itemShortInfo}}</text></view>
    <block wx:if="{{itemIsSold==0 && itemIsPublished==1 && itemIsDelete==0}}">
      <view><text class='book_info'>在售</text></view>
    </block>
    <block wx:else>
      <view><text class='book_info'>已下架</text></view>
    </block>
  </view>
  </view>
</view>

