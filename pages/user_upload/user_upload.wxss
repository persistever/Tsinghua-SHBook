/* pages/user_upload/user_upload.wxss */
scroll-view{
  margin-bottom: 50px;
}
.list{
  border-top:1px solid #eee;
  margin-top:10px;
}
.list .item {
  background: #fff;
  padding: 10px 15px;
  height: 80px;
  border-bottom: 1px solid #eee;
  position: relative;
}

.list .item .image {
  width:90px;
  height: 80px;
  position: absolute;
  left:15px;
  top:10px;
}
.list .item .image image{
  width:100%;
  height: 100%;
}
.list .item .content {
  padding-left:100px;
}
.list .item .content .h1{
  display: block;
  font-size: 30rpx;
  color:#666;
  line-height: 40rpx;
  margin-bottom: 15px;
  text-overflow: ellipsis;
  overflow: hidden;  
  white-space:nowrap; 
  height: 40rpx;
}
.list .item .content .p{
  display: block;
  font-size: 12px;
  color:#999;
  line-height: 25px;
}
.list .item .content .myp{
  font-size:14px;
  color: #ff533b;
}

.dizhi{
  position: absolute;
  right:30px;
  bottom: 10px;
  color: #ccc;
  height: 30px;
  line-height:30px;
  width:60px;
  text-align: right;
}

.number {
  width:110px;
  height: 50px;
  position: absolute;
  right:0;
  top:30px;
}
.number:after{
  content:"";
  display: block;
  clear: both;
}
.number .plus{
  width:30px;
  height: 30px;
  line-height: 28px;
  text-align: center;
  color:#fff;
  background:  rgba(97, 16, 97, 0.952);
  border-radius: 50%;
  font-size: 20px;
  float: left;
  margin-top:10px;
}
.number .sum{
  float: left;
  margin-top: 5px;
  width:40px;
  line-height: 40px;
  font-size: 14px;
  text-align: center;
}
.number .jiax{
  margin-right:15px;
}


.wuge{
  text-align: center;
  font-size: 18px;
  color:#666;
  margin-top: 50rpx;
}